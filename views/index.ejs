<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eve Black Market</title>
    
    <link rel="stylesheet" href="/css/marketBrowser.css">

    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>Eve Black Market</h1>
            <% if (user) { %>
                <div class="user-info">
                    <span>Welcome, <%= user.characterName %></span>
                    <a href="/logout" class="btn">Logout</a>
                </div>
            <% } else { %>
                <a href="/login" class="btn">Login with EVE Online</a>
            <% } %>
        </header>

        <% if (user) { %>
            <div class="market-browser">
                <div id="category-tree" class="category-tree"></div>
                <div class="market-content">
                    <div id="market-content"></div>
                    
                    <div class="orders-section">
                        <h2>Your Orders</h2>
                        <button id="addOrderBtn" class="btn">Add New Order</button>
                        <div class="orders-container">
                            <div class="buy-orders">
                                <h3>Buy Orders</h3>
                                <div id="buyOrdersList"></div>
                            </div>
                            <div class="sell-orders">
                                <h3>Sell Orders</h3>
                                <div id="sellOrdersList"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Add Order Modal -->
            <div id="addOrderModal" class="modal">
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <h2>Add New Order</h2>
                    <form id="addOrderForm">
                        <div class="form-group">
                            <label for="itemName">Item Name:</label>
                            <input type="text" id="itemName" name="itemName" required>
                        </div>
                        <div class="form-group">
                            <label for="price">Price:</label>
                            <input type="number" id="price" name="price" required>
                        </div>
                        <div class="form-group">
                            <label for="quantity">Quantity:</label>
                            <input type="number" id="quantity" name="quantity" required>
                        </div>
                        <div class="form-group">
                            <label for="orderType">Order Type:</label>
                            <select id="orderType" name="orderType" required>
                                <option value="buy">Buy</option>
                                <option value="sell">Sell</option>
                            </select>
                        </div>
                        <button type="submit" class="btn">Submit Order</button>
                    </form>
                </div>
            </div>

           
        <% } %>
    </div>

    <script src="/js/main.js"></script>
    <% if (user) { %>
        <script src="/js/marketBrowser.js"></script>
        <script src="/js/orders.js"></script>
    <% } %>
</body>
</html>
